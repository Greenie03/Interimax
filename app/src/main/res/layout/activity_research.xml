<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResearchActivity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/cross_icon"
        android:contentDescription="@string/back_icon_description"
        android:layout_alignParentStart="true"
        android:background="@color/transparent"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/title"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true">
            <ImageButton
                android:id="@+id/search_button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/search_loop_icon"
                android:background="@color/transparent"
                android:contentDescription="@string/search_button" />
            <EditText
                android:id="@+id/search_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:paddingStart="0dp"
                android:ellipsize="end"
                android:maxLines="1"

                android:hint="@string/search_hint"
                android:autofillHints=""
                android:inputType="text"
                android:background="@color/transparent"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/filter_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:contentDescription="@string/filter_icon_description"
            android:src="@drawable/filter_icon"
            android:background="@drawable/border_grey"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/recent_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_layout"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_search"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="36dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/grey"
                android:dividerHeight="2dp" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/popular_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popular"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_below="@id/recent_search_layout"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_below="@id/popular_section_title"
        android:layout_marginVertical="24dp">
        <LinearLayout
            android:id="@+id/popular_buttons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

</RelativeLayout>